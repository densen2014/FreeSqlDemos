{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ARM_ConsoleApp/ARM_ConsoleApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ARM_ConsoleApp/ARM_ConsoleApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/ARM_ConsoleApp/ARM_ConsoleApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
          "label": "buildBlazorWpf1",
          "command": "dotnet",
          "type": "process",
          "args": [
            "build",
            "${workspaceFolder}/Maui/BlazorWpf1//BlazorWpf1.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
          ],
          "problemMatcher": "$msCompile"
        },
        {
            "label": "buildMauiBlazorApp2-maccatalyst",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Maui/MauiBlazorApp2/MauiBlazorApp2.csproj",
                //"build -t:Run -f net6.0-maccatalyst",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            //dotnet build -t:Run -f net6.0-android
            "label": "buildMauiBlazorApp2-android",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Maui/MauiBlazorApp2/MauiBlazorApp2.csproj",
                "--framework",
                "net6.0-android"
              ],
            "problemMatcher": "$msCompile"
        },
        {
            //模拟器 C:\Program Files (x86)\Android\android-sdk\emulator\emulator.EXE -netfast -avd pixel_5_-_api_30 -prop monodroid.avdname=pixel_5_-_api_30
            //dotnet build -t:Run -f net6.0-android
            "label": "RunMauiBlazorApp2-android",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Maui/MauiBlazorApp2/MauiBlazorApp2.csproj",
                "-t:Run",
                "--framework",
                "net6.0-android"
              ],
            "problemMatcher": "$msCompile"
        },
    ]
}